{% if item.url %}
  <a {% if item.url == url %}aria-current="page"{% endif %} href="{{ item.url }}">
    {% if item.children %}📁{% endif %}
    {{ item.title }}
  </a>
{% else %}
  <span>📁 {{ item.title }}</span>
{% endif %}

{% ifAsync item.children %}
<ul>
  {% asyncEach item in item.children %}
  <li>
    {% include "templates/menu_item.njk" %}
  </li>
  {% endeach %}
</ul>
{% endif %}
